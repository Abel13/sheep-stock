{
  "expo": {
    "name": "Espaço Natural",
    "slug": "sheep-stock",
    "owner": "abelb13",
    "newArchEnabled": true,
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "androidStatusBar": {
      "backgroundColor": "#5B6B3C",
      "translucent": true
    },
    "androidNavigationBar": {
      "backgroundColor": "#F4F4F4"
    },
    "splash": {
      "backgroundColor": "#FFFFFF",
      "image": "./assets/images/splash.png",
      "resizeMode": "contain"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.abelb13.sheepstock",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Este aplicativo requer acesso à biblioteca de fotos para permitir o upload de imagens.",
        "NSCameraUsageDescription": "Este aplicativo requer acesso à câmera para capturar fotos diretamente.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.abelb13.sheepstock",
      "permissions": [
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends."
        }
      ],
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ],
      "expo-font",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "3ece4986-08ba-45c4-8d53-08051dd243bc"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/3ece4986-08ba-45c4-8d53-08051dd243bc"
    }
  }
}
